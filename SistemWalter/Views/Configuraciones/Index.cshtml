@model IEnumerable<SistemWalter.Context.Configuracione>

@{
    ViewBag.Title = "Index";
}

<h2>Configuraciones</h2>

<p>
    @*@Html.ActionLink("Modificar", "Create")*@
    @Html.ActionLink("Modificar", "Create", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table alert-info">
    <tr>
        <th class="active alert-danger">
            @Html.DisplayNameFor(model => model.Couta_Fija)
        </th>
        <th class="active alert-danger">
            @Html.DisplayNameFor(model => model.Mora)
        </th>
        <th class="active alert-danger">
            @Html.DisplayNameFor(model => model.Valor_Metro)
        </th>
        <th class="active alert-danger">
            @Html.DisplayNameFor(model => model.Valor_Metro2)
        </th>
        <th class="active alert-danger">
            @Html.DisplayNameFor(model => model.Valor_Metro3)
        </th>
        <th class="active alert-danger">
            @Html.DisplayNameFor(model => model.Multa)
        </th>
        <th class="active alert-danger">
            @Html.DisplayNameFor(model => model.Detalle)
        </th>
        <th class="active alert-danger">
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th class="active alert-danger">
            @Html.DisplayNameFor(model => model.Fecha_Registro)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Couta_Fija)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor_Metro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor_Metro2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor_Metro3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Multa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Detalle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_Registro)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-success glyphicon glyphicon glyphicon-edit" })
                @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-success glyphicon glyphicon glyphicon-erase", @title = "Eliminar Registro" })
            </td>
        </tr>
    }

</table>
