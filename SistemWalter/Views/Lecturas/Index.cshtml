@model List<SistemWalter.ViewModels.LecturasView>

@{
    ViewBag.Title = "Index";
}

<h2>Lecturas</h2>

<p>
    @Html.ActionLink("Crear nuevo registro", "Create", new { }, new { @class = "btn btn-primary" })
    @*@Html.ActionLink("Crear nuevo registro", "Create")*@ |
    @Html.ActionLink("Generar Facturas", "Asignarpago", "Pagoes", null, null)
</p>

<div class="row"> 
    <div class="col-md-4">
        
    </div>
    <div class="col-md-8">
        @using (Html.BeginForm())
        {
        <div class="form-inline">
            <select name="Meses" class="form-control">
                <option value="1">Enero</option>
                <option value="2">Febrero</option>
                <option value="3">Marzo</option>
                <option value="4">Abril</option>
                <option value="5">Mayo</option>
                <option value="6">Junio</option>
                <option value="7">Julio</option>
                <option value="8">Agosto</option>
                <option value="9">Septiembre</option>
                <option value="10">Octubre</option>
                <option value="11">Noviembre</option>
                <option value="12">Diciembre</option>
            </select>
            <input type="text" name="parametro" class="form-control" placeholder="Nombre del cliente" />
            <input type="submit" class="btn btn-primary" value="Buscar" />
        </div>
        }
    </div>
</div>

<table class="table">
    <tr>
        <th class="active alert-danger">
            Lecturas
        </th>
        <th class="active alert-danger">
            Estado de Lecturas
        </th>
        <th class="active alert-danger">
            Estado
        </th>
        <th class="active alert-danger">
            Fecha de Registros
        </th>
        <th class="active alert-danger">
            Mes
        </th>
        <th class="active alert-danger">
            Cliente
        </th>
        <th class="active alert-danger"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Lectura1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado_Lectura)
        </td>
        <td>
            @if (item.Estado == 1)
            {
                <font>Pendiente</font>
            }
            else
            {
                <font>Facturado</font>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha_Registro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NombreCliente)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-success glyphicon glyphicon glyphicon-edit" })
            @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-success glyphicon glyphicon glyphicon-erase", @title = "Eliminar Registro" })


        </td>
    </tr>
}

</table>
