@model IEnumerable<SistemWalter.Context.Cliente>

@{
    ViewBag.Title = "Index";
}

<h2>Clientes</h2>

<div class="row">
    <div class="col-md-4">
        <p>
            @Html.ActionLink("Crear Nuevo Registro", "Create", new { }, new { @class = "btn btn-primary" })
        </p>
    </div>
    <div class="col-md-4"></div>
    <div class="col-md-4">
        @using (Html.BeginForm())
        {
            <div class="form-inline">
                <input type="text" name="parametro" class="form-control" placeholder="Nombre del cliente" />
                <input type="submit" class="btn btn-primary" value="Buscar" />
            </div>
        }
        </div>
</div>
<div class="row">
    <div class="table-responsive">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre_Completo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DUI)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefono)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Correo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Direccion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fecha_Nacimiento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fecha_Registro)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre_Completo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DUI)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Correo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Direccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha_Nacimiento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha_Registro)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                        @Html.ActionLink("Ver Pagos", "VerPagos", "Pagoes", new { id = item.Id }, null)
                    </td>
                </tr>
            }

        </table>
    </div>
</div>